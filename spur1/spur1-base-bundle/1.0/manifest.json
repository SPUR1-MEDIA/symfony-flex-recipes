{
    "bundles": {
        "Spur1\\BaseBundle\\Spur1BaseBundle": [
            "all"
        ]
    },

    "env": {
        "SPUR1_FEATURE_REGISTER": false,
        "SPUR1_FEATURE_LOGIN": false,
        "SPUR1_FEATURE_OFFCANVAS": false
    },

    "copy-from-package": {
        "assets/controllers/": "assets/controllers/",
        "assets/Spur1BaseBundle.dist.scss": "assets/styles/Spur1BaseBundle.dist.scss",
        "config/routes/": "%CONFIG_DIR%/routes/",
        "config/packages/": "%CONFIG_DIR%/packages/"
    },

    "copy-from-recipe": {
        "public/": "%PUBLIC_DIR%/",
        "var/php/sessions/": "%VAR_DIR%/php/sessions/"
    },

    "add-lines": [
        {
            "file": "assets/styles/app.scss",
            "content": "//Import Spur1BaseBundle\n@import './Spur1BaseBundle.dist.scss'; \n\n//Import your custom overrides\n\n//Import Bootstrap after importing Spur1BaseBundle\n@import '~bootstrap/scss/bootstrap';\n",
            "position": "bottom"
        }
    ]
}